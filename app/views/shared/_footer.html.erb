<div class='footer'>
  <div class='footer-contents'>
    <div class="manualist-details">
      <%= link_to image_tag("1.png",class:"manualist-icon"), root_path %>
    </div>
    <div class='manualist-details'>
      <h2 class='footer-content-head'>MANUALISTについて</h2>
      <ul>
        <li><%= link_to '利用規約', "#", class: "footer-link" %></li>
        <li><%= link_to 'ガイド', "#", class: "footer-link" %></li>
        <li><%= link_to 'ロゴ利用ガイドライン', "#", class: "footer-link" %></li>
        <li><%= link_to 'お知らせ', "#", class: "footer-link" %></li>
